mixin nav-and-logo(page)
  .row
    .header__upper-box
      .header__logo-box
        if page == 'home'
          a(href="#"): +svg('logo')
        else
          a(href="index.html"): +svg('logo')
      +nav(page)
            
mixin nav(page)
  nav.nav
    ul.nav__list
      if page == 'home'
        li.nav__item: a(href="#").nav__link Inicio
        li.nav__item: a(href="#projects").nav__link.scroll-on-page-link Proyectos
      else
        li.nav__item: a(href="index.html").nav__link Inicio
        li.nav__item: a(href="index.html#projects").nav__link Proyectos
      if page == 'my-story'
        li.nav__item: a(href="#").nav__link Mi historia
      else
        li.nav__item: a(href="my-story.html").nav__link Mi historia
      li.nav__item: a(href="#contact").btn.scroll-on-page-link Contacto
      
//- insert svg icons into html
mixin svg(name)

  case name
    when 'facebook'
      include ../img/svg/facebook-icon.svg
    
    when 'twitter'
      include ../img/svg/twitter-icon.svg
    
    when 'instagram'
      include ../img/svg/instagram-icon.svg
      
    when 'linkedin'
      include ../img/svg/linkedin-icon.svg
      
    when 'logo'
      include ../img/svg/logo.svg

    default
      p don't find this icon

